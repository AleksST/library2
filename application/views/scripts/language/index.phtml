<?php 
if(is_array($this->errors)) {
    foreach ($this->errors as $name=>$error){
        if(count($error)){
            echo 'ошибка в поле ' . $name .': ' . implode('; ', $error) . '<br />';
        }
    }
}

if(!empty($this->language)) {
    $this->form->setDefaults($this->language->toArray());
    $this->form->removeElement('addBtn');
    $this->form->removeElement('searchBtn');
} else {
    $this->form->removeElement('deleteBtn');
    $this->form->removeElement('updateBtn');
}
echo $this->form->render();

?><?php foreach ($this->languages as $language): ?>
    <div>
        <label> NAME : <?= $language->name; ?> </label>
        <label> ID : <?= $language->id; ?> </label>
        <label> short : <?= $language->name_short; ?> </label>
        <label> ENG : <?= $language->eng; ?> </label>
        <label> ISO3 : <?= $language->iso3; ?> </label>
        <a href="/language/update/?id=<?= $language->id; ?>">редактировать</a>
    </div>
<?php endforeach; ?>
